{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    // "jsx": "react",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "esModuleInterop": true, // 支持使用import d from 'cjs'的方式引入commonjs包。
    "declaration": true
    // "paths": {
    //   "@shared/*": [ "src/app/shared/*" ],
    //   "@routes/*":[ "src/app/routes/*" ],
    //   "@core/*": [ "src/app/core/*" ],
    //   "@env/*": [ "src/environments/*" ]
    // }
  },
  "exclude": [
    "node_modules"
  ],
  "include":[
    "./src/**/*", "index.d.ts"
  ]
}
