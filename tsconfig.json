{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    // "jsx": "react",
    "sourceMap": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es5",
    "esModuleInterop": true, // 支持使用import d from 'cjs'的方式引入commonjs包。
    "declaration": true, // 生成 .d.ts 定义文件
    "emitDeclarationOnly": true, // 只生成声明文件，而不会生成js文件
    "declarationDir": "./dist/@types", // 生成定义文件的存放文件夹
    // "paths": {
    //   "@shared/*": [ "src/app/shared/*" ],
    //   "@routes/*":[ "src/app/routes/*" ],
    //   "@core/*": [ "src/app/core/*" ],
    //   "@env/*": [ "src/environments/*" ]
    // }
  },
  "files": [
    "src/index.ts"
  ],
  // "exclude": [
  //   "node_modules"
  // ],
  // "include":[
  //   "./src/**/*"
  // ]
}
